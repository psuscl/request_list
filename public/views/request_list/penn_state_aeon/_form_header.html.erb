<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">

<%= javascript_include_tag "#{@base_url}/assets/penn_state_aeon_form.js" %>

<% handler.list_map.each do |name, value| %>
  <input type="hidden" name="<%= name %>" value="<%= value  %>">
<% end %>

<div class="card mb-4">
  <div class="card-header">
    <h2 class="mb-0"><%= t('plugin.request_list.request_form_subtitle') %></h2>
  </div>
  <div class="card-body">
    <div class="form-group">
      <label for="request_type_select" class="control-label"><%= t('plugin.request_list.options.request_type') %></label>
      <select name="request_type" id="request_type_select" class="form-control rl-type-select">
        <% handler.list_opts[:request_types].each do |type, values| %>
          <option value="<%= ASUtils.to_json(values) %>"><%= type %></option>
        <% end %>
      </select>
    </div>

    <div class="form-group required">
      <label for="request_date" class="control-label" title="Required"><%= t('plugin.request_list.options.date') %></label>
      <div class="input-group datepicker rl-datepicker">
        <input id="request_date" class="date-field form-control required"
                title="<%= t('plugin.request_list.options.date_help') %>"
                data-date="<%= Date.today.strftime('%m/%d/%Y') %>"
                data-date-start-date="<%= Date.today.strftime('%m/%d/%Y') %>"
                data-autoclose="true"
                data-force-parse="true"
                placeholder="MM/DD/YYYY"
                aria-label="Use the arrow keys to select a date"
                name="ScheduledDate">
      </div>
    </div>

    <div class="rl-ha-additional-fields">
      <div class="rl-ha-options-form" id="rl-saved-options-form" data-request-type="saved">
        <span></span>
      </div>


      <div class="rl-ha-options-form" id="rl-photoduplication-options-form" data-request-type="photoduplication">
        <div class="form-group col-12 col-sm-3">
          <label for="Format" class="control-label" title="Required"><%= t('plugin.request_list.options.format') %></label>
          <select id="Format" name="Format" class="form-control rl-ha-list-input required">
            <option value="">...</option>
            <% handler.list_opts[:format_options].each do |option| %>
              <option value="<%= option %>"><%= option %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group col-12 col-sm-3">
          <label for="ShippingOption" class="control-label" title="Required"><%= t('plugin.request_list.options.delivery') %></label>
          <select id="ShippingOption" name="ShippingOption" class="form-control rl-ha-list-input required">
            <option value="">...</option>
            <% handler.list_opts[:delivery_options].each do |option| %>
              <option value="<%= option %>"><%= option %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group col-12 col-sm-3">
          <label for="ServiceLevel" class="contro-label" title="Required"><%= t('plugin.request_list.options.service_level') %></label>
          <select id="ServiceLevel" name="ServiceLevel" class="form-control rl-ha-list-input required">
            <option value="">...</option>
            <% handler.list_opts[:service_level_options].each do |option| %>
              <option value="<%= option %>"><%= option %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group col-12 col-sm-2" style="padding-top: 20px">
          <label for="ForPublication" class="control-label" style="display:inline"><%= t('plugin.request_list.options.for_publication') %></label>
          &nbsp;
          <input id="ForPublication" name="ForPublication" type="checkbox" class="rl-ha-list-input" style="display:inline" value="Yes"/>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="col-12 col-md-6 p-2">
        <label for="Notes" class="control-label"><%= t('plugin.request_list.options.notes') %></label>
        <textarea id="Notes" name="Notes"
                  rows="3"
                  class="form-control rl-ha-list-input"
                  placeholder="<%= t('plugin.request_list.options.notes_help') %>"
                  maxlength="65536"></textarea>
      </div>

      <div class="col-12 col-md-6 p-2">
        <label for="SpecialRequest" name="SpecialRequest" class="control-label rl-ha-questions-label"
                data-photoduplication-label="<%= t('plugin.request_list.options.photoduplication_instructions') %>"
                data-other-label="<%= t('plugin.request_list.options.questions') %>">
          <%= t('plugin.request_list.options.questions') %>
        </label>
        <textarea id="SpecialRequest" name="SpecialRequest"
                  rows="3"
                  class="form-control rl-ha-list-input rl-ha-questions-input"
                  placeholder="<%= t('plugin.request_list.options.questions_help') %>"
                  data-photoduplication-help="<%= t('plugin.request_list.options.photoduplication_instructions_help') %>"
                  data-other-help="<%= t('plugin.request_list.options.questions_help') %>"
                  maxlength="255"></textarea>
      </div>
    </div>

    <div class="d-flex justify-content-end pt-1">
      <button type="submit" class="btn btn-primary submit-requests">
        <%= t('plugin.request_list.submit_button_label') %>
      </button>
    </div>
  </div>
</div>

<script>
  var picker = new Pikaday({ 
      field: document.getElementById('request_date'),
      format: 'MM/DD/YYYY',
      firstDay: 1,
      minDate: new Date()
  });
</script>
